<% if user_signed_in? %>
  <h2>投稿する</h2>
    <%= form_for @tweet do |f| %>
      <%= f.text_field :text %>
      <%= f.submit %>
    <% end %>
    <hr>
  <h2>投稿一覧</h2>
  <% @tweets.each do |tweet| %>
    <a href="/users/<%= tweet.user.id %>"><%= tweet.user.email %></a>
    <p><a href="/tweets/<%= tweet.id %>"><%= tweet.text %></a></p>
  <% end %>

<% else %>
  <%= link_to "ユーザー登録", new_user_registration_path %>
  <%= link_to "ログイン", new_user_session_path %>
<% end %>